import java.util.Scanner;

public class main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // gereftan sanie
        System.out.print("Enter the number of seconds: ");
        int sanie = input.nextInt();

        // mohasebe
        int saat = sanie / 3600;
        sanie %= 3600;

        int min = sanie / 60;
        sanie %= 60;

        // neshan dadan natije
        System.out.printf("%d hours, %d minutes, %d seconds", saat, min, sanie);
    }
}

